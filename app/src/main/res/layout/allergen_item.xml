<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_margin="2dp"
    android:background="@drawable/custom_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/allergen_number"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="@drawable/custom_background"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageView
        android:id="@+id/allergen_severity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:contentDescription="@string/allergen_severity"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:paddingHorizontal="8dp"
        app:srcCompat="@android:drawable/presence_invisible" />

    <TextView
        android:id="@+id/allergen_content"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/custom_background"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageButton
        android:id="@+id/allergen_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1.5"
        android:contentDescription="@string/edit_allergen"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/allergen_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1.5"
        android:contentDescription="@string/remove_allergen"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</LinearLayout>