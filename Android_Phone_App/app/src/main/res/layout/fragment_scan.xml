<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scan.ScanFragment">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/image_capture_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:elevation="1dp"
        android:background="@drawable/baseline_camera_24"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/showHintButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_corners"
        android:drawableTop="@drawable/baseline_question_mark_24"
        android:layout_marginTop="80dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toStartOf="@+id/recentScanButton"
        app:layout_constraintStart_toEndOf="@+id/openGalleryButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openGalleryButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:elevation="2dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/open_gallery_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/recentScanButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:elevation="2dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/recent_scans_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>